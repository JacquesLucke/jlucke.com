---
import BaseLayout from "../layouts/BaseLayout.astro";
import RecentPostCard from "../components/RecentPostCard.astro";
import {
  getDraftBlogPosts,
  sortPostsMostRecentFirst,
} from "../scripts/blog_posts";

let posts = await getDraftBlogPosts();
sortPostsMostRecentFirst(posts);
---

<BaseLayout
  title="Drafts by Jacques"
  description="Overview over the draft blog posts"
>
  <h1 class="mt-4 mb-1 text-2xl font-bold">Drafts</h1>
  {
    posts.map((post) => (
      <RecentPostCard frontmatter={post.data} url={`/blog/${post.id}`} />
    ))
  }
</BaseLayout>
