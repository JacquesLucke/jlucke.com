---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  quality?: number;
}

const { src, alt, quality } = Astro.props;
---

<div class="flex justify-center">
  <Picture
    src={src}
    alt={alt}
    width={400}
    quality={quality}
    class="popup-image my-2 cursor-pointer rounded"
    data-popup-src={src.src}
  />
</div>
