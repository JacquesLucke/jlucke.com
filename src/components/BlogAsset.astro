---
import type { ACTION_ERROR_CODES } from "astro:actions";
import BlogPicture from "./BlogPicture.astro";
import BlogVideo from "./BlogVideo.astro";

interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;

const isImage =
  src.endsWith(".jpg") || src.endsWith(".png") || src.endsWith(".webp");
const isVideo = src.endsWith(".mp4");
---

{isImage && <BlogPicture src={src} alt={alt} description={alt} />}
{isVideo && <BlogVideo src={src} alt={alt} description={alt} />}
