---
import { formatDate } from "../scripts/date_formatting";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <div class="mx-auto max-w-[700px] px-2">
    <h1 class="mt-6 mb-1 font-sans text-3xl font-bold">{frontmatter.title}</h1>
    <p class="text-muted font-sans">
      Published on {formatDate(frontmatter.pubDate)}
    </p>
    <p class="text-muted mb-4 font-sans">{frontmatter.author}</p>
    <slot />
  </div>
</BaseLayout>
