---
interface Props {
  name: string;
  id: string;
  defaultValue: number;
}

const { name, id, defaultValue } = Astro.props;
---

<div>
  <span class="inline-block w-50">
    {name}:
  </span>
  <input
    type="number"
    id={id}
    value={defaultValue}
    class="persist-value w-20 text-right"
  />
  mm
</div>

<script>
  import "../../scripts/persistent_inputs";
</script>
